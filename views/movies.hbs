<div class = "container" id = "list">
    <div>
        <h2>Ironhack Cinema</h2>
        <p>Click on the movie to check the showtimes!</p>
    </div>

    <div class = "row d-flex justify-content-around flex-wrap">
        {{#each moviesList}}
            <div class="col-md-4 d-flex flex-column align-items-center justify-content-start">
                <img src="{{this.image}}" alt="movie" width="200px">
                <p class="movie-title">{{this.title}}</p>
                <a href="/movie/{{this.id}}" class="see-more">See more</a>
            </div>
        {{/each}}
    </div>
</div>